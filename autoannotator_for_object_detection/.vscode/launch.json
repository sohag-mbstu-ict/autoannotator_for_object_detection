{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python Debugger: Django",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver"
            ],
            
            "django": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Chrome Debugging: Frontend",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8000",  // The URL of your Django server
            "webRoot": "${workspaceFolder}/",  // Adjust if static files are in a subfolder
            "sourceMaps": true,
            "trace": true
        }
        
    ]
}
